* {
    outline: none;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
             -webkit-box-sizing: border-box;
                -moz-box-sizing: border-box;
                 -ms-box-sizing: border-box;
    box-sizing: border-box;
    padding: 0;
    margin: 0;
}
html {
    background: #fff;
    height: 100%;
    width: 100%;
}
body {
    width: 100%;
    height: 100%;
    background-color: #FFF;
    font-family: Hiragino Sans GB, Arial, Helvetica, "黑体", sans-serif;
    font-size: 14px;
    color: #878787;
    -webkit-touch-callout: inherit ;
      -webkit-user-select: auto ;
    font-family: "microsoft yahei", Verdana,Arial, Helvetica, sans-serif;
}
a {
    color: #878787;
    text-decoration: none;
    -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
}
a:hover {
    text-decoration: none;
}
button,
input,
select,
textarea {
    font-size: 100%;
    margin: 0;
    padding: 0;
    outline: none;
}
textarea,
input {
    resize: none;
    outline: none;
    border: none 0;
}
textarea {
    resize: none;
    -webkit-appearance: none;
}
ul,
ol,
li {
    list-style: none;
}
em {
    font-style: normal;
}
.clearfix:after {
    content: "";
    clear: both;
    display: block;
}
.clearfix {
    zoom: 1;
}
/* 重置苹果下按钮的背景颜色*/
input[type=button],
input[type=submit],
input[type=file],
input[type=number],
button {
	 cursor: pointer; 
	 -webkit-appearance: none; 
}
input[type=number] {
	-webkit-border-radius: 0;
}
/*移除text="number"时默认上下箭头*/
input::-webkit-outer-spin-button,
input::-webkit-inner-spin-button {
    -webkit-appearance: none !important;
    margin: 0;
}
input[type="number"] {
	-moz-appearance:textfield;
}

/*新增*/
b,
em {
    font-weight: 100;
}
i{
	font-style: normal;
}
input[type="checkbox"],
 input[type="radio"] {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
}
/* 设置内联, 减少浮动带来的bug */
.fn-left,
.fn-right {
    display: inline;
}
.fn-left {
    float: left;
}
.fn-right {
    float: right;
}
:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
    color: #fff;  
}
::-moz-placeholder { /* Mozilla Firefox 19+ */
    color: #fff;
}
input:-ms-input-placeholder,
textarea:-ms-input-placeholder {
    color: #fff;
}
input::-webkit-input-placeholder,
textarea::-webkit-input-placeholder {
    color: #fff;
}
/*顶部用户信息*/
.app-header {
    min-height:16px;
    width: 100%;
    background-color: #f8d312;
    font-size: 12px;
    height: 5%;
    text-align: center;
	/* Firefox */
    display: -moz-box;
    -moz-box-align: center;
     -moz-box-pack: center;
	/* Safari、Opera 以及 Chrome */
    display: -webkit-box;
    -webkit-box-align: center;
     -webkit-box-pack: center;
	
	/* W3C */
    display: box;
    box-align: center;
     box-pack: center;
	
}
.app-header .app-user {
    color: #fe4845;
}
.gray{
    background: #ccc;
    color: #fff;
}