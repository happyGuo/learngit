<script type="text/javascript">
$(function(){

    $("#reg").click(function(){
        $.ajax({
            url: '/user/register',
            type: 'POST',
            dataType : 'json',
            data: {
                login: $('#reg_login').val(),
                real_name:$('#real_name').val(),
                pwd:$('#reg_pwd').val(),
                comfirm_pwd:$('#comfirm_pwd').val(),
                role :$('#role').val(),
                cert:$('#cert').val(),
                csrf:$('#csrf').val()
            }
        }).done(function(msg){
            if (msg.message=='') {
                alert('注册成功')
                location.reload()
            } else {
                alert(msg.message);
            }
        });
    });
});
</script>
