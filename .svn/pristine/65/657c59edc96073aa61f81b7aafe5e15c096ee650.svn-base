<script type="text/javascript">
function deleteuser(userId){
    if(confirm('确定删除该用户吗?')){
        $.post('<?php echo $this->url->get('user/delete')?>',{userId:userId,},function(data){
            if(data == 1){
                alert('删除成功！');
            }else if(data==2){
                alert('删除失败，该用户有店铺！');
            }else{
                alert(data);
            }
            window.location.href = '<?php echo $this->url->get('user/list');?>';
        });
    }
}
function ajaxfrost(id,type){
    var data = 'id='+id;
        $.ajax({
            type:'POST', 
            url:"user/ajaxfrost",
            dataType:'text',
            data:data, 
            async:false,
            success:function(result)
            {
                if (result == 1) {
                    alert("冻结成功");
                }
                if (result == 2) {
                    alert("冻结失败");
                }
                if(type==0){
                    window.location.href = '<?php echo $this->url->get('user/list');?>';
                }else if(type==1){
                    window.location.href = '<?php echo $this->url->get('user/list?type=1');?>';
                }

            }
        });    
}
function ajaxthaw(id,type){
    var data = 'id='+id;
        $.ajax({
            type:'POST', 
            url:"user/ajaxthaw",
            dataType:'text',
            data:data, 
            async:false,
            success:function(result)
            {
                if (result == 1) {
                    alert("解冻成功");
                }
                if (result == 2) {
                    alert("解冻失败");
                }
                if(type==0){
                    window.location.href = '<?php echo $this->url->get('user/list');?>';
                }else if(type==1){
                    window.location.href = '<?php echo $this->url->get('user/list?type=1');?>';
                }
            }
        });    
}
</script>