<script type="text/javascript">
	//同意争议
	var change_status = function(id){
		var data = 'id='+id;
        $.ajax({
            type:'POST', 
            url:"order/agree",
            dataType:'text',
            data:data, 
            async:false,
            success:function(result)
            {
            	if(result == 1){
            		alert('争议处理成功');
            		location.href = 'order/troversy';
            	}
            	if(result == 2){
            		alert('争议处理失败');
            		location.href = 'order/troversy';
            	}
            }
        });		
	}
	//拒绝争议
	function reply(id){
		$("#id").val(id);
 		$("#contentid").show();
 		$("#agree").hide();
	}
	//取消
	function cancel(){
		location.href = 'order/troversy';
	}
</script>