<script type="text/javascript">
	var confirm = function(id)
	{
		var html = "<input type='text' id='pay_sn' class='from-control'  placeholder='转账流水号'>";
        bootbox.dialog({
            message:html,
            title: "确认",
            onEscape: function() {},
            show: true,
            backdrop: true,
            size: 'large',
            animate: true,
            className: "my-modal",
            buttons: {
            success: {
              label: "确认",
              className: "btn-success",
              callback: function() {
                var pay_sn=$("#pay_sn").val();
//                var preg_pay_sn = new RegExp('^[0-9]+$');
//                if(preg_pay_sn.exec(pay_sn) == null){
//                    alert('流水号填写有误');
//                    return false;
//                }
                $.ajaxSetup({async: false});
                $.post('partner/confirmwithdraw',{pay_sn:pay_sn,id:id},
                    function(data){
                        if(data.data != 0){
                            alert(data.errmsg);
                            window.location.href=window.location.href;
                        }else if(data.data == 0){
                            alert(data.errmsg);
                            return false;
                        }else{
                            alert('操作失败');
                            return false;
                        }

                    },'json');
              }
            },
            "取消": {
              className: "btn-danger",
            }
            }
        });
	}

	var rejected = function(id)
	{
		var html = "<input type='text' id='remark' class='from-control'  placeholder='请填写备注'>";
        bootbox.dialog({
            message:html,
            title: "驳回",
            onEscape: function() {},
            show: true,
            backdrop: true,
            size: 'large',
            animate: true,
            className: "my-modal",
            buttons: {
            success: {
              label: "确认",
              className: "btn-success",
              callback: function() {
                var remark=$("#remark").val();
                if(remark == ''){
                	alert('请填写备注');
                    return false;
                }
                $.ajaxSetup({async: false});
                $.post('partner/rejectedwithdraw',{remark:remark,id:id},
                    function(data){
                        if(data.data != 0){
                            alert(data.errmsg);
                            window.location.href=window.location.href;
                        }else if(data.data == 0){
                            alert(data.errmsg);
                            return false;
                        }else{
                            alert('提现失败');
                            return false;
                        }

                    },'json');
              }
            },
            "取消": {
              className: "btn-danger",
            }
            }
        });
	}
</script>