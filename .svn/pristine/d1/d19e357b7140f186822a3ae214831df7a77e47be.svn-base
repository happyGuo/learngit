<script type="text/javascript">
function checkform() {
        var checkflag = true;
        $("input[onblur],select[onblur],textarea[onblur]").each(function () {
            this.onblur();
            if ($(this).attr("check") == 0)checkflag = false;
        });

        return checkflag;
    }
function manage(){
    var manage = $('#role').val();
    if(manage == 'admin' || manage == 'system'){
        $('#city').hide();
    }else{
        $('#city').show();
    }
}
});
